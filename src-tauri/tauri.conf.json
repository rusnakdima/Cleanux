{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cleanux",
  "version": "0.1.3",
  "identifier": "com.tcs.cleanux",
  "build": {
    "beforeDevCommand": "bun run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build:prod",
    "frontendDist": "../dist/cleanux/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Cleanux",
        "fullscreen": false,
        "resizable": true,
        "width": 800,
        "height": 600,
        "minHeight": 150,
        "minWidth": 150
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "updater": {
      "active": false
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}